<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PostFragment">

    <!-- TODO: Update blank fragment layout -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImg"
        android:layout_margin="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_account_box_black_24dp"/>

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user name"
        android:textColor="@color/secondaryTextColor"
        android:layout_toRightOf="@+id/profileImg"
        android:layout_marginTop="8dp"/>
    <EditText
        android:id="@+id/post"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/profileImg"
        android:hint="Write your post here"
        android:background="#EDEDED"
        android:gravity="top|left"
        />

    <TextView
        android:id="@+id/addPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post"
        android:text="Add photo"
        android:textColor="@color/secondaryTextColor"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"/>

    <ImageView
        android:id="@+id/photoGal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/addPhoto"
        android:layout_margin="5dp"
        android:src="@drawable/ic_photo_black_24dp" />
    <ImageView
        android:id="@+id/photoCam"
        android:layout_width="50dp"
        android:layout_height="53dp"
        android:src="@drawable/ic_photo_camera_black_24dp"
        android:layout_below="@+id/addPhoto"
        android:layout_toRightOf="@+id/photoGal"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/makePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/photoGal"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:text="Post" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="152dp"
        android:layout_height="120dp"
        android:layout_alignStart="@+id/profileImg"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="27dp"
        tools:src="@tools:sample/backgrounds/scenic" />


</RelativeLayout>